@model IEnumerable<WebAplication.Models.Contacto>
@{
    ViewData["Title"] = "Lista De Contacto";
}

<h1 class="text-center">Lista de contacto con .NET8 (.NET CORE MVC)</h1>
<div class="offset-9 col-3 mb-3">
    <a asp-action="Crear" asp-controller="Inicio" class="btn btn-secondary d-block mx-auto btn-lg">
        <i class="fa fa-plus" aria-hidden="true"></i>Nuevo Contacto
    </a>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card-header bg-dark">
            <h3 class="text-white">Lista de Contacto</h3>
        </div>
        <div class="card-body">
            <div class=" table table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-responsive table-hover table-borderless  table-dark " id="tblContactos" width="100%" cellpadding="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m=> m.Id)</th>
                                <th>@Html.DisplayNameFor(m=>m.Nombre)</th>
                                <th>@Html.DisplayNameFor(m=>m.Telefono)</th>
                                <th>@Html.DisplayNameFor(m=>m.Celular)</th>
                                <th>@Html.DisplayNameFor(m=>m.Email)</th>
                                <th>@Html.DisplayNameFor(m=>m.EstadoCivil)</th>
                                <th>@Html.DisplayNameFor(m=>m.FechaNacimiento)</th>
                                <th>@Html.DisplayNameFor(m=>m.FechaCreacion)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m=>item.Id)</td>
                                    <td>@Html.DisplayFor(m=>item.Nombre)</td>
                                    <td>@Html.DisplayFor(m=>item.Telefono)</td>
                                    <td>@Html.DisplayFor(m=>item.Celular)</td>
                                    <td>@Html.DisplayFor(m=>item.Email)</td>
                                    <td>@Html.DisplayFor(m=>item.EstadoCivil)</td>
                                    <td>@Html.DisplayFor(m=>item.FechaNacimiento)</td>
                                    <td>@Html.DisplayFor(m=>item.FechaCreacion)</td>
                                    <td>
                                        @if (item.Foto != null && item.Foto.Length > 0)
                                        {
                                            <img src="data:image;base64,@Convert.ToBase64String(item.Foto)" alt="Foto de Contacto" width="50" />
                                        }
                                        else
                                        {
                                            <span>No hay foto</span>
                                        }
                                    </td>

                                    <td>

                                        <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
                                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                                <i class="fa fa-pencil" aria-hidden="true"></i>Editar
                                            </a>

                                            <a asp-action="Detalle" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                                <i class="fa fa-info-circle" aria-hidden="true"></i>Detalle
                                            </a>
                                            <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                <i class="fa fa-trash" aria-hidden="true"></i>Eliminar
                                            </a>
                                       </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning">
                        <strong>No hay registros</strong>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
