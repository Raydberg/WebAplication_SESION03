@model WebAplication.Models.Contacto
@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>
<div class="row">
    <div class="offset-12">
        <div class="card-header bg-dark">
            <h3 class="text-white"><strong>Eliminar Contacto</strong></h3>
        </div>
        <div class="card-body">
            <form asp-action="Eliminar">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" readonly />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" readonly />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" readonly />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <select asp-for="EstadoCivil" class="form-select" readonly aria-label="Small select example">
                        <option selected>Estado Civil</option>
                        <option value="Soltero">Soltero</option>
                        <option value="Casado">Casado</option>
                        <option value="Viduo">Viduo</option>
                        <option value="Divorciado">Divorciado</option>
                    </select>
                </div>
                <div class="form-floating mb-3">
                    <input type="date" asp-for="FechaNacimiento" class="form-control" readonly placeholder="Ingresa Nombre del Contacto" />
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-outline-primary d-block mx-auto" type="submit">
                        <i class="fa fa-user" aria-hidden="true"></i>Eliminar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>